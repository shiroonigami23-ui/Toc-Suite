{
  "title": "Binary Incrementer",
  "description": "Increments a binary number by 1. Start at the rightmost bit (end of string).",
  "type": "TM",
  "machine": {
    "type": "TM",
    "states": [
      { "id": "q_start", "initial": true, "x": 100, "y": 200 },
      { "id": "q_carry", "initial": false, "x": 300, "y": 200 },
      { "id": "q_done", "initial": false, "accepting": true, "x": 500, "y": 200 }
    ],
    "transitions": [
      { "from": "q_start", "to": "q_carry", "read": "B", "write": "B", "direction": "L" },
      { "from": "q_carry", "to": "q_carry", "read": "1", "write": "0", "direction": "L" },
      { "from": "q_carry", "to": "q_done", "read": "0", "write": "1", "direction": "R" },
      { "from": "q_carry", "to": "q_done", "read": "B", "write": "1", "direction": "R" }
    ],
    "alphabet": ["0", "1", "B"],
    "blank": "B"
  }
}
